<div class="min-vw-100 d-flex flex-column align-items-center justify-content-center" style="background-color: #f8f9fa;">
    <h1 class="h1" style="color: #6c757d;">Change password</h1>
    <form class="d-flex flex-column gap-3 w-75 border-1 rounded-2 border bg-opacity-25 p-3" method="post" action="/Admin/ChangePassword" style="background-color: #e9ecef;">
        <div class="w-100 d-flex flex-column gap-2 border-1 rounded-2 p-2" style="background-color: #dee2e6;">
            <div class="d-flex justify-content-between p-2 w-100">
                <label class="text-black w-25" style="color: #495057;">Old password:</label>
                <input class="form-control" name="password" style="border-color: #ced4da;" />
            </div>
            <div class="d-flex justify-content-between p-2 w-100">
                <label class="text-black w-25" style="color: #495057;">New password:</label>
                <input class="form-control" name="newPassword" style="border-color: #ced4da;" />
            </div>
        </div>

        <button type="submit" class="btn btn-success" style="background-color: #28a745; border-color: #28a745;">Change</button>

        @await Html.PartialAsync("ErrorsBlock")
    </form>
</div>
